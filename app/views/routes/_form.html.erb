<%= simple_form_for(@route) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :from %>
    <%= f.input :to %>
    <%= f.input :length %>
    <%= f.input :fuel_cost %>
    <%= f.input :luggage %>
    <%= f.input :finished %>
    <%= f.input :accident %>
    <%= f.association :car %>
    <%= f.association :driver %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
