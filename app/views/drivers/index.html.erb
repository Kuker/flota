<h1>Kierowcy</h1>

<table>
  <thead>
    <tr>
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Pesel</th>
      <th>Telefon</th>
      <th>Data dolaczenia</th>
      <th>Uprawnienia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.name %></td>
        <td><%= driver.lastname %></td>
        <td><%= driver.pesel %></td>
        <td><%= driver.phone %></td>
        <td><%= driver.join_date %></td>
        <td><%= driver.category %></td>
        <td><%= link_to 'Pokaz', driver %></td>
        <td><%= link_to 'Edytuj', edit_driver_path(driver) %></td>
        <td><%= link_to 'Usun', driver, method: :delete, data: { confirm: 'Jestes pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy kierowca', new_driver_path %>
