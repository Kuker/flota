<h1>Samochody uzyte przez kierowce <%= @driver.name %></h1>

<table>
  <thead>
  <tr>
    <th>Numer rejestracyjny</th>
    <th>Marka</th>
    <th>Model</th>
    <th>Rok produkcji</th>
    <th>Typ paliwa</th>
    <th>Kolor</th>
    <th>Pobor paliwa /100km</th>
    <th>Ladownosc</th>
    <th>Dostepnosc</th>
    <th>Wymagane kategorie</th>
    <th>Przebieg</th>
    <th>Uszkodzony</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @cars.each do |c| %>
  <% c.each do |car| %>
      <tr>
        <td><%= car.plate_no %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.production %></td>
        <td><%= car.fuel_type %></td>
        <td><%= car.color %></td>
        <td><%= car.fuel_consumption %></td>
        <td><%= car.capacity %></td>
        <td><%= car.availability %></td>
        <td><%= car.category %></td>
        <td><%= car.mileage %></td>
        <td><%= car.damaged %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
      <% end %>
  </tbody>
</table>

<br>
