<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Plate no</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Production</th>
      <th>Fuel type</th>
      <th>Color</th>
      <th>Fuel consumption</th>
      <th>Capacity</th>
      <th>Availability</th>
      <th>Category</th>
      <th>Mileage</th>
      <th>Damaged</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.plate_no %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.production %></td>
        <td><%= car.fuel_type %></td>
        <td><%= car.color %></td>
        <td><%= car.fuel_consumption %></td>
        <td><%= car.capacity %></td>
        <td><%= car.availability %></td>
        <td><%= car.category %></td>
        <td><%= car.mileage %></td>
        <td><%= car.damaged %></td>
        <td><%= link_to 'Show', car %></td>
        <%- if current_user.has_role? :admin %>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
            <% end -%>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
